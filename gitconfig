[alias]
  st = status
  d = diff --color
  ci = commit -v
  aa = add --all
  br = branch
  co = checkout
  df = diff --color
  dc = diff --cached
  lg = log -p
  l = log --pretty=format:\"%h %an %ar - %s\"
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files
  pb = push -u origin
  cor = checkout -t
  # Show files ignored by git:
  ign = ls-files -o -i --exclude-standa
  undo-commit = reset --soft HEAD^
[push]
	default = upstream
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
